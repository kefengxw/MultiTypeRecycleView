<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_boldtext_text_video_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_text_to_left"
        android:layout_marginTop="@dimen/padding_text_to_top"
        android:layout_marginEnd="@dimen/padding_text_to_right"
        android:layout_marginBottom="@dimen/padding_text_to_bottom">

        <TextView
            android:id="@+id/item_boldtext_text_video_cv_btext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sweden_stockholm_and_jonkoping_and_umea_and_goteborg_and_malmo_and_gotland"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.6" />

        <TextView
            android:id="@+id/item_boldtext_text_video_cv_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_text_to_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_boldtext_text_video_cv_btext"
            app:layout_constraintWidth_percent="0.6" />

        <VideoView
            android:id="@+id/item_boldtext_text_video_cv_video"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_boldtext_text_video_cv_btext"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.3" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>